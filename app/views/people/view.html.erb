<div class="setting_panel"> 
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">客戶總覽</h3>
    </div>
    <div class="panel-body">
      <span class="label label-info">總客戶 <%= @person.count %>人</span>
      <div class="panel panel-default view_panel">
        <% @person.each do |person| %>
        <div class="view_box">          

            <%= image_tag person.avatar.url, width: "100" if person.avatar.url != "/avatars/original/missing.png" %>
            <%= image_tag "/assets/1388596855_people-b.png", width: "100" if person.avatar.url == "/avatars/original/missing.png"%>

            <div class="view_item"><%= person.name %> <%= @sex_label[person.sex].html_safe %></div>      
            <% if person.honorific and  person.honorific != "" %><div class="view_item">(<%= person.honorific %>)</div><% end %>            
            <div class="view_item"><%= person.mobeil %></div>                      
            <div class="view_item"><%= person.telephone %></div>                    
            <div class="view_item"><%= person.email %></div>                    
            <div class="view_item"><%= person.company_name %></div>                    
            <div class="view_item"><%= person.company_department %></div>                    
            <div class="view_item"><%= person.company_title %></div>
            <div class="view_item"><%= person.zip_code%></div>
            <div class="view_item"><%= person.address %></div>
            <div class="view_item"><%= person.fax %></div>
            <div class="view_item"><%= person.company_unified_numbering %></div>
            <div class="view_item"><%= person.company_zip_code %></div>
            <div class="view_item"><%= person.company_address %></div>
            <div class="view_item"><%= person.company_telephone_1 %></div>
            <div class="view_item"><%= person.company_telephone_2 %></div>
            <div class="view_item"><%= person.company_fax %></div>
            <div class="view_item"><%= person.company_email %></div>
            <div class="view_item"><%= auto_link(person.company_website, :html => { :target => '_blank' }) %></div>
            <div class="view_item"><%= @level_label[person.level].html_safe %></div>
            <div class="view_item"><%= @dafa_attitude_label[person.dafa_attitude].html_safe %></div>
            <div class="view_item"><span class="label label-success"><%= person.source %></span></div>
            <div class="view_item"><%= person.ps %></div>        
            <div class="view_item item_date">建立: <%= person.created_at.to_s.gsub("UTC","") %></div>
            <div class="view_item item_date">更新: <%= person.updated_at.to_s.gsub("UTC","") %></div>
            <%= link_to(image_tag("/assets/1388778916_old-edit-find.png", :width => 25), edit_person_path(person)) %>
            <%= link_to(image_tag("/assets/1388778956_Gnome-Edit-Delete-64.png", :width => 25), person_path(person), method: :delete, confirm: "確定要刪除嗎？") %>
        </div>
        <% end %>
      </div>      
    </div>
  </div>
</div>  
